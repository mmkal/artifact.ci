{
  "name": "artifact.ci",
  "version": "1.0.0",
  "description": "",
  "packageManager": "pnpm@9.7.1",
  "main": "index.js",
  "scripts": {
    "pgkit-link": "npx link ../pgkit/packages/pgkit",
    "pgkit": "node node_modules/pgkit/dist/cli.js",
    "generate": "pnpm build-action",
    "build-composite-action": "tsx src/action/generate.ts",
    "build-action": "esbuild src/action/index.ts --bundle --platform=node --target=node20 --outfile=upload/action.js --minify",
    "dev": "next dev",
    "prepare": "simple-git-hooks",
    "build": "next build",
    "start": "next start",
    "lint": "pnpm eslint .",
    "e2e": "playwright test"
  },
  "dependencies": {
    "@actions/artifact": "^2.1.9",
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.5.0",
    "@actions/http-client": "^2.2.3",
    "@actions/io": "^1.1.3",
    "@octokit/rest": "^20.0.1",
    "@pgkit/client": "^0.2.5",
    "@vercel/blob": "^0.23.4",
    "adm-zip": "^0.5.10",
    "cheerio": "^1.0.0",
    "mime": "^4.0.4",
    "mime-types": "^2.1.35",
    "next": "^14.2.7",
    "next-auth": "5.0.0-beta.20",
    "nextra": "^2.12.3",
    "nextra-theme-docs": "^2.12.3",
    "pgkit": "0.2.7-11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.23.8"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "1.46.1",
    "@types/adm-zip": "^0.5.5",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^17.0.12",
    "@types/react": "^18.0.22",
    "@types/react-dom": "^18.0.7",
    "esbuild": "^0.24.0",
    "eslint": "^8.57.0",
    "eslint-plugin-mmkal": "0.10.0",
    "simple-git-hooks": "^2.11.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "5.5.4",
    "yaml": "^2.5.1"
  },
  "simple-git-hooks": {
    "pre-commit": "git diff origin/main --quiet upload src/action || (pnpm generate && git diff --quiet upload/action.js || (echo amending commit && git add upload/action.js && git commit --amend --no-edit))",
    "pre-push": "git diff origin/main --quiet upload src/action || (pnpm generate && git diff --quiet upload/action.js || (echo amending commit && git add upload/action.js && git commit --amend --no-edit && exit 1))"
  }
}
